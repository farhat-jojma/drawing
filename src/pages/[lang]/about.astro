---
import Layout from "../../layouts/Layout.astro";
import { getLangStaticPaths, resolveLang } from "../../lib/i18n";
import HtmlContent from "../../components/HtmlContent.astro";
import Footer from "../../components/Footer.astro";
export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../../locales/${locale}.json`).then((m) => m.default);
---

<Layout lang={locale} title={dict.aboutTitle}>
  <!-- Pixel Hero -->
  <section class="relative bg-gradient-to-r from-pink-600 via-yellow-400 to-cyan-500 text-white py-16 overflow-hidden">
    <!-- Animated pixel grid overlay -->
    <div class="absolute inset-0 bg-[url('/pixel-grid.png')] opacity-30 animate-pulse"></div>
  
    <div class="relative max-w-5xl mx-auto px-6 text-center">
      <!-- Rainbow-glow Title -->
      <h1 class="text-4xl md:text-6xl font-black pixel-font mb-6 bg-gradient-to-r from-pink-400 via-yellow-300 to-cyan-400 bg-clip-text text-transparent drop-shadow-[0_0_10px_#ff8aff]">
        {dict.aboutTitle}
      </h1>
      <p class="text-lg md:text-xl text-gray-100 max-w-3xl mx-auto leading-relaxed">
        {dict.aboutSubtitle}
      </p>
  
      <!-- Pixel badges -->
      <div class="mt-10 flex justify-center gap-3 flex-wrap">
        <span class="pixel-badge bg-pink-500 text-white">üé® {dict.pixel} </span>
        <span class="pixel-badge bg-yellow-400 text-black">üïπ {dict.retro}</span>
        <span class="pixel-badge bg-cyan-500 text-white">‚≠ê {dict.creativity}</span>
        <span class="pixel-badge bg-green-500 text-white">üí° {dict.inspiration}</span>
        <span class="pixel-badge bg-purple-500 text-white">üé∂ {dict.fun}</span>
      </div>
  
      <!-- Floating pixel art -->
      <div class="pixel-hero-art mt-10 animate-bounce-slow" aria-hidden="true">
        <svg width="240" height="110" viewBox="0 0 240 110">
          <rect x="10"  y="25" width="20" height="20" fill="#ff3d6e" stroke="#111" stroke-width="4"/>
          <rect x="40"  y="12" width="18" height="18" fill="#ffd93d" stroke="#111" stroke-width="4"/>
          <rect x="70"  y="38" width="22" height="22" fill="#00CFFF" stroke="#111" stroke-width="4"/>
          <rect x="110" y="18" width="16" height="16" fill="#32CD32" stroke="#111" stroke-width="4"/>
          <rect x="140" y="30" width="24" height="24" fill="#fffef4" stroke="#111" stroke-width="4"/>
          <rect x="170" y="10" width="18" height="18" fill="#9b5de5" stroke="#111" stroke-width="4"/>
          <rect x="200" y="28" width="22" height="22" fill="#ff8500" stroke="#111" stroke-width="4"/>
        </svg>
      </div>
    </div>
  </section>
  

  <!-- Pixel Panel About -->
  <section class="relative max-w-5xl mx-auto px-6 py-14">
    <div class="pixel-panel p-6 md:p-10 border-4 border-cyan-400 shadow-[4px_4px_0px_#00fff7] bg-white">
      <div class="prose prose-gray mx-auto leading-relaxed">
        <HtmlContent slug="about" locale={locale} fallbackText="About page not available." />
      </div>
    </div>
  </section>

  <!-- Pixel Feature Grid -->
  <section class="py-14 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
      <div class="pixel-panel p-8 pixel-shadow-hover hoverable border-4 border-pink-500">
        <span class="block text-2xl font-black pixel-font mb-4">01</span>
        <h3 class="text-xl font-bold mb-3">{dict.aboutCard1Title}</h3>
        <p class="text-gray-700">{dict.aboutCard1Text}</p>
      </div>
      <div class="pixel-panel p-8 pixel-shadow-hover hoverable border-4 border-yellow-400">
        <span class="block text-2xl font-black pixel-font mb-4">02</span>
        <h3 class="text-xl font-bold mb-3">{dict.aboutCard2Title}</h3>
        <p class="text-gray-700">{dict.aboutCard2Text}</p>
      </div>
      <div class="pixel-panel p-8 pixel-shadow-hover hoverable border-4 border-cyan-400">
        <span class="block text-2xl font-black pixel-font mb-4">03</span>
        <h3 class="text-xl font-bold mb-3">{dict.aboutCard3Title}</h3>
        <p class="text-gray-700">{dict.aboutCard3Text}</p>
      </div>
    </div>
  </section>



  <!-- Pixel CTA -->
  <section class="relative text-white py-20 md:py-24  overflow-hidden">
    <!-- subtle pixel grid -->
    <div class="absolute inset-0 bg-[url('/pixel-grid.png')] opacity-10 pointer-events-none"></div>

    <!-- floating pixels -->
    <div class="pointer-events-none absolute -top-4 left-8 h-3 w-3 bg-pink-500 border-2 border-black shadow-[3px_3px_0_#000] animate-ping-slow"></div>
    <div class="pointer-events-none absolute top-6 right-10 h-3 w-3 bg-yellow-300 border-2 border-black shadow-[3px_3px_0_#000] animate-pulse"></div>

    <div class="relative max-w-4xl mx-auto px-6">
      <div class="pixel-panel mx-auto max-w-3xl border-4 border-pink-500  backdrop-blur-sm p-8 md:p-10 text-center shadow-[6px_6px_0_#000]">
        <h2 class="text-3xl md:text-5xl font-black pixel-font mb-4 drop-shadow-[0_0_10px_#ff3d6e]">
          {dict.aboutCTA}
        </h2>
        <p class="text-base md:text-lg text-black mb-8">
          {dict.aboutCTAText}
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
          <a href={`/${locale}/`} aria-label={dict.aboutCTAButton} class="pixel-cta bg-pink-500 hover:bg-pink-600 active:translate-y-[2px] text-white px-6 py-3 rounded-lg font-bold shadow-[4px_4px_0_#000]">
            {dict.aboutCTAButton}
          </a>
          
        </div>
      </div>
    </div>
  </section>
  <Footer />
</Layout>
