---
import { getLangStaticPaths, resolveLang } from "../lib/i18n";

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../locales/${locale}.json`).then((m) => m.default);
---

<section id="tips" class="w-full py-16 bg-yellow-50" lang={locale}>
  <div class="max-w-6xl mx-auto px-4">
    <div class="inline-block px-3 py-1 mb-4 bg-white/90 border-2 border-black shadow-[4px_4px_0_#000]">
      <span class="text-xs tracking-widest uppercase">{dict.tips}</span>
    </div>
    <h2 class="text-3xl sm:text-4xl font-extrabold mb-8 pixel-title">{dict.tipsTitle}</h2>

    <div class="grid md:grid-cols-2 gap-6">
      <div class="bg-white p-6 border-2 border-black shadow-[6px_6px_0_#000]">
        <h3 class="font-bold text-xl mb-2">{dict.tipsCard1Title}</h3>
        <p class="text-gray-700">{dict.tipsCard1Text}</p>
      </div>
      <div class="bg-white p-6 border-2 border-black shadow-[6px_6px_0_#000]">
        <h3 class="font-bold text-xl mb-2">{dict.tipsCard2Title}</h3>
        <p class="text-gray-700">{dict.tipsCard2Text}</p>
      </div>
      <div class="bg-white p-6 border-2 border-black shadow-[6px_6px_0_#000]">
        <h3 class="font-bold text-xl mb-2">{dict.tipsCard3Title}</h3>
        <p class="text-gray-700">{dict.tipsCard3Text}</p>
      </div>
      <div class="bg-white p-6 border-2 border-black shadow-[6px_6px_0_#000]">
        <h3 class="font-bold text-xl mb-2">{dict.tipsCard4Title}</h3>
        <p class="text-gray-700">{dict.tipsCard4Text}</p>
      </div>
    </div>

    <div class="mt-8">
      <button onclick="document.getElementById('game').scrollIntoView({ behavior: 'smooth' })" 
        class="px-5 py-3 bg-yellow-300 hover:bg-yellow-400 transition-colors border-2 border-black shadow-[4px_4px_0_#000] font-semibold">
        {dict.tipsCTA}
      </button>
    </div>
  </div>

  <style>
    .pixel-title {
      text-shadow: 0 0 0 #000, 2px 2px 0 #000, -2px 2px 0 #000; 
      letter-spacing: .5px;
    }
  </style>
</section>
