---
const { lang = "en" } = Astro.props;
const base = `/${lang}`;
---

<footer class="w-full mt-16 bg-gradient-to-t from-gray-100 to-white border-t-2 border-black ">
  <div class="pixel-divider"></div>
  <div class="w-full px-6 md:px-10 py-10">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <div class="inline-block px-3 py-1 mb-3 bg-white border-2 border-black shadow-[4px_4px_0_#000]">
          <span class="text-xs tracking-widest uppercase">Pixel Drawing</span>
        </div>
        <p class="text-gray-700">Create retro art one square at a time. Built for fun and creativity.</p>
      </div>

      <nav>
        <h3 class="font-bold mb-3">Explore</h3>
        <ul class="space-y-2">
          <li><a href="#game" class="underline hover:no-underline">Play</a></li>
          <li><a href="#how-to-play" class="underline hover:no-underline">How to Play</a></li>
          <li><a href="#tips" class="underline hover:no-underline">Tips</a></li>
        </ul>
      </nav>

      <nav>
        <h3 class="font-bold mb-3">Legal</h3>
        <ul class="space-y-2">
          <li><a href={`${base}/about`} class="underline hover:no-underline">About</a></li>
          <li><a href={`${base}/privacy-policy`} class="underline hover:no-underline">Privacy</a></li>
          <li><a href={`${base}/terms-of-service`} class="underline hover:no-underline">Terms</a></li>
        </ul>
      </nav>
    </div>

    <div class="mt-10 flex items-center justify-between border-t border-black/20 pt-6 text-sm text-gray-600">
      <p>Â© {new Date().getFullYear()} Pixel Drawing Online</p>
      <div class="flex items-center gap-3">
        <span class="pixel-icon blue" title="Social"></span>
        <span class="pixel-icon green" title="Social"></span>
      </div>
    </div>
  </div>
</footer>

