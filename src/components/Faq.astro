---
import { getLangStaticPaths, resolveLang } from "../lib/i18n";

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../locales/${locale}.json`).then((m) => m.default);
---

<section id="faq" class="w-full py-16 bg-teal-50" lang={locale}>
  <div class="max-w-6xl mx-auto px-4">
    <div class="inline-block px-3 py-1 mb-4 bg-white/90 border-2 border-black shadow-[4px_4px_0_#000]">
      <span class="text-xs tracking-widest uppercase">{dict.faq}</span>
    </div>
    <h2 class="text-3xl sm:text-4xl font-extrabold mb-6 pixel-title">{dict.faqTitle}</h2>

    <div class="space-y-4">
      <details class="bg-white p-5 border-2 border-black shadow-[6px_6px_0_#000]" open>
        <summary class="font-bold cursor-pointer">{dict.faqCard1Title}</summary>
        <p class="text-gray-700 mt-3">{dict.faqCard1Text}</p>
      </details>

      <details class="bg-white p-5 border-2 border-black shadow-[6px_6px_0_#000]">
        <summary class="font-bold cursor-pointer">{dict.faqCard2Title}</summary>
        <p class="text-gray-700 mt-3">{dict.faqCard2Text}</p>
      </details>

      <details class="bg-white p-5 border-2 border-black shadow-[6px_6px_0_#000]">
        <summary class="font-bold cursor-pointer">{dict.faqCard3Title}</summary>
        <p class="text-gray-700 mt-3">{dict.faqCard3Text}</p>
      </details>

      <details class="bg-white p-5 border-2 border-black shadow-[6px_6px_0_#000]">
        <summary class="font-bold cursor-pointer">{dict.faqCard4Title}</summary>
        <p class="text-gray-700 mt-3">{dict.faqCard4Text}</p>
      </details>

      <details class="bg-white p-5 border-2 border-black shadow-[6px_6px_0_#000]">
        <summary class="font-bold cursor-pointer">{dict.faqCard5Title}</summary>
        <p class="text-gray-700 mt-3">{dict.faqCard5Text}</p>
      </details>
    </div>

    <div class="mt-8">
      <button onclick="document.getElementById('game').scrollIntoView({ behavior: 'smooth' })" 
        class="px-5 py-3 bg-yellow-300 hover:bg-yellow-400 transition-colors border-2 border-black shadow-[4px_4px_0_#000] font-semibold">
        {dict.faqCTA}
      </button>
    </div>
  </div>

  <style>
    .pixel-title {
      text-shadow: 0 0 0 #000, 2px 2px 0 #000, -2px 2px 0 #000;
      letter-spacing: .5px;
    }
  </style>
</section>
