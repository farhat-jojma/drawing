---
import { getLangStaticPaths, resolveLang } from "../lib/i18n";

export async function getStaticPaths() {
  return getLangStaticPaths();
}

const locale = resolveLang(Astro.params.lang);
const dict = await import(`../locales/${locale}.json`).then((m) => m.default);
---

<section id="how-to-play" class="w-full py-16 bg-emerald-50" lang={locale}>
  <div class="max-w-6xl mx-auto px-4">
    <div class="inline-block px-3 py-1 mb-4 bg-white/90 border-2 border-black shadow-[4px_4px_0_#000]">
      <span class="text-xs tracking-widest uppercase">{dict.howToPlay}</span>
    </div>
    <h2 class="text-3xl sm:text-4xl font-extrabold mb-8 pixel-title">{dict.howToPlayTitle}</h2>

    <div class="grid md:grid-cols-3 gap-6">
      <div class="bg-white p-6 border-2 border-black shadow-[6px_6px_0_#000]">
        <div class="w-8 h-8 bg-emerald-400 border-2 border-black mb-4"></div>
        <h3 class="font-bold text-xl mb-2">{dict.howToPlayCard1Title}</h3>
        <p class="text-gray-700">{dict.howToPlayCard1Text}</p>
      </div>

      <div class="bg-white p-6 border-2 border-black shadow-[6px_6px_0_#000]">
        <div class="w-8 h-8 bg-gray-200 border-2 border-black mb-4"></div>
        <h3 class="font-bold text-xl mb-2">{dict.howToPlayCard2Title}</h3>
        <p class="text-gray-700">{dict.howToPlayCard2Text}</p>
      </div>

      <div class="bg-white p-6 border-2 border-black shadow-[6px_6px_0_#000]">
        <div class="w-8 h-8 bg-yellow-300 border-2 border-black mb-4"></div>
        <h3 class="font-bold text-xl mb-2">{dict.howToPlayCard3Title}</h3>
        <p class="text-gray-700">{dict.howToPlayCard3Text}</p>
      </div>
    </div>

    <div class="mt-8 flex flex-wrap items-center gap-3">
      <button onclick="document.getElementById('game').scrollIntoView({ behavior: 'smooth' })" 
        class="px-5 py-3 bg-yellow-300 hover:bg-yellow-400 transition-colors border-2 border-black shadow-[4px_4px_0_#000] font-semibold">
        {dict.howToPlayCTA}
      </button>
      <button onclick="document.getElementById('tips').scrollIntoView({ behavior: 'smooth' })" 
        class="px-5 py-3 bg-white hover:bg-gray-100 transition-colors border-2 border-black shadow-[4px_4px_0_#000] font-semibold">
        {dict.howToPlayCTA2}
      </button>
    </div>
  </div>

  <style>
    .pixel-title {
      text-shadow: 0 0 0 #000, 2px 2px 0 #000, -2px 2px 0 #000;
      letter-spacing: .5px;
    }
  </style>
</section>
